CREATE TABLE IF NOT EXISTS `user_ev_forest_barrel_logs` (
  `id` bigint(20) NOT NULL AUTO_INCREMENT COMMENT 'シーケンスID',
  `user_ev_barrel_id` bigint(20) NOT NULL,
  `shortening_item` int(11) NOT NULL COMMENT '時短アイテムの使用時間',
  `point_item_code` int(11) NOT NULL COMMENT 'ポイントアイテムのコード',
  `maturation_end_time` datetime NOT NULL COMMENT '熟成終了日時',
  `stay_end_time` datetime NOT NULL COMMENT '待機終了日時',
  `bonus_flag` tinyint(4) NOT NULL DEFAULT '0' COMMENT 'ボーナスフラグ',
  `bonus_code` int(11) NOT NULL DEFAULT '0' COMMENT 'ボーナスコード',
  `created` datetime NOT NULL COMMENT '作成日時',
  `modified` datetime NOT NULL COMMENT '更新日時',
  PRIMARY KEY (`id`),
  KEY `user_ev_barrel_id` (`user_ev_barrel_id`)
)

CREATE TABLE IF NOT EXISTS `user_ev_forest_item_logs` (
  `id` bigint(20) NOT NULL AUTO_INCREMENT COMMENT 'シーケンスID',
  `owner_id` varchar(128) NOT NULL COMMENT 'オーナーID',
  `event_master_item_id` int(11) NOT NULL COMMENT 'イベントマスタのアイテムID',
  `amount` int(11) NOT NULL COMMENT 'アイテム増減数',
  `count` int(11) NOT NULL COMMENT '増減後のアイテム保有数',
  `action_type` varchar(128) NOT NULL COMMENT 'アクションタイプ',
  `created` datetime NOT NULL COMMENT '作成日時',
  `modified` datetime NOT NULL COMMENT '更新日時',
  PRIMARY KEY (`id`),
  KEY `owner_id` (`owner_id`,`event_master_item_id`)
) ENGINE=InnoDB  DEFAULT CHARSET=utf8 COMMENT='森のビアガーデンアイテムログ';

CREATE TABLE IF NOT EXISTS `user_ev_forest_statuses` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `owner_id` varchar(128) NOT NULL COMMENT 'オーナーID',
  `stage_id` int(11) NOT NULL COMMENT 'ステージID',
  `point` int(11) NOT NULL COMMENT 'ポイント',
  `early_comp_flag` tinyint(4) NOT NULL DEFAULT '0' COMMENT '早期コンプフラグ',
  `bonus_stage_success_count` int(11) NOT NULL DEFAULT '0' COMMENT 'ボーナスステージの成功回数',
  `cocktail_get_flag` tinyint(4) NOT NULL DEFAULT '0' COMMENT 'カクテル習得フラグ',
  `created` datetime NOT NULL COMMENT '作成日時',
  `modified` datetime NOT NULL COMMENT '更新日時',
  PRIMARY KEY (`id`),
  UNIQUE KEY `owner_id` (`owner_id`),
  KEY `early_comp_flag` (`early_comp_flag`)
) ENGINE=InnoDB  DEFAULT CHARSET=utf8 COMMENT='森のビアガーデンカクテルイベントステータス';

